<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.thesistest.web.categories.CategoriesEdit"
        datasource="categoriesDs"
        messagesPack="com.company.thesistest.web.categories">
    <dsContext>
        <datasource id="categoriesDs"
                    class="com.company.thesistest.entity.Categories"
                    view="categories-edit"/>
    </dsContext>
    <layout expand="tabsheet"
            height="100%"
            spacing="true"
            width="100%">
        <tabSheet id="tabsheet">
            <tab id="mainTab"
                 caption="msg://mainTab"
                 margin="true">
                <fieldGroup id="fieldGroup"
                            datasource="categoriesDs">
                    <column width="250px">
                        <field id="code"/>
                        <field id="name"/>
                    </column>
                </fieldGroup>
                <scrollBox id="scrollBox56"
                           height="100%"/>
            </tab>
        </tabSheet>
        <iframe id="windowActions"
                screen="editWindowActions"/>
    </layout>
</window>
